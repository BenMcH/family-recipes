{
  "connection": "default",
  "collectionName": "recipes",
  "info": {
    "name": "Recipe"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "ingredients": {
      "type": "component",
      "repeatable": true,
      "component": "food.ingredient"
    },
    "instructions": {
      "type": "text"
    },
    "mealMedia": {
      "collection": "file",
      "via": "related",
      "plugin": "upload",
      "required": false
    }
  }
}
